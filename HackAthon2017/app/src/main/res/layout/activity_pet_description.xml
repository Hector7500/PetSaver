<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="domain.hackathon.hackathon2017.Pet_description"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/PD_IMAGe"
                style="@style/image_style"
                app:srcCompat="@mipmap/ic_launcher"/>

            <EditText
                android:id="@+id/Name_pd"
                style="@style/EditText_style"
                android:enabled="false"
                android:hint="Name"/>



            <EditText
                android:id="@+id/Age_pd"
                style="@style/EditText_style"
                android:enabled="false"
                android:hint="Age"/>

            <EditText
                android:id="@+id/Gender_pd"
                style="@style/EditText_style"
                android:enabled="false"
                android:hint="M/F"/>



            <EditText
                android:id="@+id/Type_pd"
                style="@style/EditText_style"
                android:enabled="false"
                android:hint="Type"/>

            <EditText
                android:id="@+id/Size_pd"
                style="@style/EditText_style"
                android:enabled="false"
                android:hint="Size"/>


            <EditText
                android:id="@+id/Breed_pd"
                style="@style/EditText_style"
                android:enabled="false"
                android:hint="Breed" />


            <Button
                android:id="@+id/Shelter_Info"
                style="@style/button_style"
                android:text="Shelter Info"/>

    </LinearLayout>
</ScrollView>>
</RelativeLayout>
